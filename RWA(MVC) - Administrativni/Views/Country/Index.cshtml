@model X.PagedList.StaticPagedList<Country>
@using Microsoft.AspNetCore.Mvc.Core
@using X.PagedList.Mvc.Core

<h1>Countries</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var country in Model)
        {
            <tr>
                <td>@country.Id</td>
                <td>@country.Code</td>
                <td>@country.Name</td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination" >
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
  </div>
<style>


    .pagination a {
        margin: 0 10px;
        color: darkred; 
        text-decoration: none; 
    }

</style>
