@model IEnumerable<RWA_MVC____2.Models.Genre>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("AddOrEdit","Genre",null,Context.Request.Scheme)','New Genre')" class="btn btn-success text-white">New Genre</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("AddOrEdit","Genre",new{item.Id},Context.Request.Scheme)','Update Genre')" class="btn btn-info text-white">Edit</a>

       
                    <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this);" class="d-inline">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>