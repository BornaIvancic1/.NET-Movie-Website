@model Video
@{
}
<h1>Add Video</h1>
<form method="post" action="Add" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    
    <div class="mb-3">
        <label for="" class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description">
    </div>
    
    <div class="mb-3">
        <label for="" class="form-label">GenreId</label>
        <input type="number" class="form-control" asp-for="GenreId">
    </div>
    
    <div class="mb-3">
        <label for="" class="form-label">TotalSeconds</label>
        <input type="number" class="form-control" asp-for="TotalSeconds">
    </div>
    
    <div class="mb-3">
        <label for="" class="form-label">StreamingUrl</label>
        <input type="text" class="form-control" asp-for="StreamingUrl">
    </div> 
    
    <div class="mb-3">
        <label for="" class="form-label">ImageId</label>
        <input type="number" class="form-control" asp-for="ImageId">
    </div>
 

    <button type="submit" class="btn btn-primary">Submit</button>
</form>